<?xml version="1.0" encoding="utf-8"?>
<com.xuexiang.xui.widget.layout.XUIFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notice_card_view"
    style="@style/XUILayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/config_margin_16dp"
    android:layout_marginTop="@dimen/config_margin_4dp"
    android:layout_marginEnd="@dimen/config_margin_16dp"
    android:layout_marginBottom="@dimen/config_margin_4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/notice_name"
                style="@style/TextStyle.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                tools:text="不走弯路的四六级"/>

            <ImageView
                android:id="@+id/comment_action_more"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="end|center_vertical"
                android:paddingStart="5dp"
                android:paddingEnd="15dp"
                android:src="@drawable/ic_web_more"/>

        </FrameLayout>

        <TextView
            android:id="@+id/notice_content"
            style="@style/TextStyle.Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:padding="5dp"
            android:singleLine="false"
            tools:text="不走弯路的四六级学习课程，助力轻松通过四六级，拿高分!"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/config_color_select_bg">

            <TextView
                android:id="@+id/notice_username"
                style="@style/TextStyle.Title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                tools:text="金老师"/>

            <TextView
                android:id="@+id/notice_time"
                style="@style/TextStyle.Title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                tools:text="2022年4月20日 20:11"/>

        </FrameLayout>

    </LinearLayout>

</com.xuexiang.xui.widget.layout.XUIFrameLayout>