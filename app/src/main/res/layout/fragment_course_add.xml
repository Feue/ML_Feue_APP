<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextStyle.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:text="课程名称"
            tools:text="课程名称:"/>

        <ImageView
            android:id="@+id/chapter_add"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginTop="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="15dp"
            android:src="@drawable/ic_course_add"/>

    </FrameLayout>

    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
        android:id="@+id/course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="课程名称"
        android:layout_marginStart="10dp"
        app:met_clearButton="true"
        app:met_maxCharacters="5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextStyle.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="第1章"
            tools:text="第1章"/>

        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:id="@+id/chapter_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="章节名称"
            android:layout_marginStart="10dp"
            app:met_clearButton="true"
            app:met_maxCharacters="5" />

    </LinearLayout>

    <ImageView
        android:id="@+id/video_add1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginTop="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:src="@drawable/ic_add_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextStyle.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="第2章"
            tools:text="第2章"/>

        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:id="@+id/chapter_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="章节名称"
            android:layout_marginStart="10dp"
            app:met_clearButton="true"
            app:met_maxCharacters="5" />

    </LinearLayout>

    <ImageView
        android:id="@+id/video_add2"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginTop="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:src="@drawable/ic_add_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextStyle.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="第3章"
            tools:text="第3章"/>

        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:id="@+id/chapter_name3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="章节名称"
            android:layout_marginStart="10dp"
            app:met_clearButton="true"
            app:met_maxCharacters="5" />

    </LinearLayout>

    <ImageView
        android:id="@+id/video_add3"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginTop="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:src="@drawable/ic_add_image"/>

</LinearLayout>